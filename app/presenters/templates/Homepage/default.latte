{block content}

    <h1 n:block="title">Můj blog</h1>

    <p><a n:href="Post:create" n:if="$user->loggedIn">Napsat nový příspěvek</a></p>

    <div n:foreach="$posts as $post" class="post">
        <div class="date">{$post->created_at|date:'F j, Y'}</div>

        <h2 class="title"><a n:href="Post:show $post->ID">{$post->title}</a></h2>

        <div>{$post->content}</div>
    </div>

{/block}